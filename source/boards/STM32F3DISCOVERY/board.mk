#
# Board: STM32F3DISCOVERY
# http://www.st.com/web/catalog/tools/FM116/SC959/SS1532/PF254044
#

# MCU model: STM32F303VCT6
BOARD_STM32F3DISCOVERY_MCU:=STM32F303xC

BOARD_STM32F3DISCOVERY_DIR:=source/boards/STM32F3DISCOVERY

BOARD_STM32F3DISCOVERY_INCLUDES:=\
	-Isource/arch/inc \
	-Isource/boards/inc \
	-I$(BOARD_STM32F3DISCOVERY_DIR)/inc \
	-I$(CHIP_STM32FXX_DIR)/inc \
	-I$(STM32F3HAL)/CMSIS/Device/ST/STM32F3xx/Include \
	-I$(CMSIS)/Include \
	-I$(STM32F3CUBE)/Drivers/STM32F3xx_HAL_Driver/Inc

BOARD_STM32F3DISCOVERY_CFLAGS:=$(CHIP_STM32FXX_CFLAGS) -D$(BOARD_STM32F3DISCOVERY_MCU) -DUSE_HAL_DRIVER
BOARD_STM32F3DISCOVERY_AFLAGS:=$(CHIP_STM32FXX_AFLAGS) -D__HEAP_SIZE=1024
BOARD_STM32F3DISCOVERY_LFLAGS:=$(CHIP_STM32FXX_LFLAGS) -T $(BOARD_STM32F3DISCOVERY_DIR)/linker/gcc/$(BOARD_STM32F3DISCOVERY_MCU).ld

BOARD_STM32F3DISCOVERY_C_VPATH:=\
	$(BOARD_STM32F3DISCOVERY_DIR)/src \
	$(CHIP_STM32FXX_DIR)/src \
	$(STM32F3CUBE)/Drivers/STM32F3xx_HAL_Driver/Src

BOARD_STM32F3DISCOVERY_S_VPATH:=\
	source/arch/cortex-m4/gcc \
	$(BOARD_STM32F3DISCOVERY_DIR)/src/gcc

BOARD_STM32F3DISCOVERY_OBJECTS:=\
	$(CHIP_STM32FXX_OBJECTS) \
	board_stm32f3disco.o \
	bitops.o \
	system_stm32f3xx.o \
	stm32f3xx_hal.o \
	stm32f3xx_hal_cortex.o \
	stm32f3xx_hal_pwr.o \
	stm32f3xx_hal_rcc.o \
	stm32f3xx_hal_gpio.o \
	stm32f3xx_hal_i2c.o \
	startup_stm32f303xc.o

BOARD_STM32F3DISCOVERY_OPENOCD_BOARD_SCRIPT:=$(BOARD_STM32F3DISCOVERY_DIR)/board/stm32f3discovery.cfg
